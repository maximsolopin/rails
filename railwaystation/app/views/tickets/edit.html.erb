<h1>Изменить билет</h1>

<%= form_for [@user, @ticket] do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <div class="field">
      <%= f.label :user_id, "Пользователь: " %><br>
      <%= f.collection_select :user_id, User.all, :id, :name %>
    </div>

    <div class="field">
      <%= f.label :train_id, "Номер поезда: " %><br>
      <%= f.collection_select :train_id, Train.all, :id, :number %>
    </div>

    <div class="field">
      <%= f.label :arrival_statition, "Начальная станция" %>
      <%= f.collection_select :arrival_statition_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :departure_statition, "Конечная станция" %>
      <%= f.collection_select :departure_statition_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="actions">
      <%= f.submit "Изменить" %>
    </div>
<% end %>

<%= link_to 'Билет', [@user, @ticket] %>
<%= link_to 'Назад', user_tickets_path(@user) %>
