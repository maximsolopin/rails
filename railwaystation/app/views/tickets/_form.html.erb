<%= form_for (@ticket) do |f| %>
    <%= render 'common/errors', resource: @ticket %>

    <div class="field">
      <%= f.label :train_id, "Номер поезда: " %><br>
      <%= f.collection_select :train_id, Train.all, :id, :number, { selected: @ticket.new_record? ? params[:train_id] : nil } %>
    </div>

    <div class="field">
      <%= f.label :arrival_statition, "Начальная станция" %>
      <%= f.collection_select :arrival_statition_id, @railway_station_all, :id, :title, { selected: params[:arrival_statition] } %>
    </div>

    <div class="field">
      <%= f.label :departure_statition, "Конечная станция" %>
      <%= f.collection_select :departure_statition_id, @railway_station_all, :id, :title, { selected: params[:departure_statition] }%>
    </div>

    <div class="actions">
      <%= f.submit "#{ @ticket.new_record? ? 'Создать' : 'Изменить' }" %>
    </div>
<% end %>
