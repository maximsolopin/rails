<div class="container">
  <div class="text-center">
    <h1><%= t('.title') %></h1>
  </div>

  <p>
    <strong><%= t('.p-title') %></strong>
    <%= @railway_station.title %>
  </p>

  <% if @railway_station.routes.empty? %>
      <p><%= t('.routes-empty') %></p>
  <% else %>
      <p><%= t('.routes') %></p>
      <ul class="list-group">
        <% @railway_station.routes.each do |route| %>
          <li class="list-group-item"><%= route.name %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<nav>
  <ul class="pager">
    <li><%= link_to t('common.edit'), edit_admin_railway_station_path(@railway_station) %></li>
    <li><%= link_to t('common.back'), admin_railway_stations_path %></li>
  </ul>
</nav>
